    }

    // 3. LOAD MAP TH√îNG MINH (Ch·ªâ t·∫£i th∆∞ vi·ªán khi click)
    function loadMap(lat, lng, popupText) {
        const placeholder = document.getElementById('map-placeholder');
        const realMap = document.getElementById('real-map');
        
        // 1. Hi·ªáu ·ª©ng loading
        placeholder.innerHTML = '<div class="d-flex justify-content-center align-items-center h-100 bg-light"><div class="spinner-border text-warning" role="status"></div></div>';
        
        // 2. H√†m kh·ªüi t·∫°o Map
        const initLeafletMap = () => {
            placeholder.style.setProperty('display', 'none', 'important');
            realMap.classList.remove('d-none');
            realMap.style.display = 'block';

            if (realMap._leaflet_id) return;

            const map = L.map('real-map').setView([lat, lng], 16);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { attribution: '&copy; OpenStreetMap' }).addTo(map);
            
            setTimeout(() => { map.invalidateSize(); }, 200);

            const brandIcon = L.divIcon({ 
                className: 'custom-map-marker-yellow', 
                html: '<div style="background:#f1c40f; width:34px; height:34px; border-radius:50%; border:2px solid white; display:flex; align-items:center; justify-content:center; box-shadow:0 3px 5px rgba(0,0,0,0.3); color:#1a1a1a;"><i class="fas fa-home" style="font-size:16px;"></i></div>', 
                iconSize: [34, 34], iconAnchor: [17, 34], popupAnchor: [0, -40]
            });

            L.marker([lat, lng], {icon: brandIcon}).addTo(map)
             .bindPopup(`<div class="text-center p-1 fw-bold text-dark small">${popupText}</div>`).openPopup();
        };

        // 3. Ki·ªÉm tra xem ƒë√£ c√≥ Leaflet ch∆∞a, n·∫øu ch∆∞a th√¨ t·∫£i ƒë·ªông
        if (typeof L === 'undefined') {
            const script = document.createElement('script');
            script.src = 'https://unpkg.com/leaflet@1.9.4/dist/leaflet.js';
            script.onload = initLeafletMap;
            document.head.appendChild(script);

            const style = document.createElement('link');
            style.rel = 'stylesheet';
            style.href = 'https://unpkg.com/leaflet@1.9.4/dist/leaflet.css';
            document.head.appendChild(style);
        } else {
            initLeafletMap();
        }
    }
</script>