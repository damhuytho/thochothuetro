<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script is:inline>
    function changeImage(src, thumb) {
        document.getElementById('main-image').src = src;
        document.querySelectorAll('.gallery-thumb').forEach(t => t.classList.remove('active'));
        thumb.classList.add('active');
    }

    function loadMap(lat, lng, popupText) {
        const placeholder = document.getElementById('map-placeholder');
        const realMap = document.getElementById('real-map');
        placeholder.style.display = 'none';
        realMap.classList.remove('d-none');
        
        if (typeof L !== 'undefined') {
            const map = L.map('real-map').setView([lat, lng], 16);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { attribution: '&copy; OpenStreetMap' }).addTo(map);
            const homeIcon = L.icon({
                iconUrl: 'https://cdn-icons-png.flaticon.com/512/25/25694.png',
                iconSize: [32, 32], iconAnchor: [16, 32], popupAnchor: [0, -30]
            });
            L.marker([lat, lng], {icon: homeIcon}).addTo(map).bindPopup(`<b>${popupText}</b>`).openPopup();
        }
    }
</script>