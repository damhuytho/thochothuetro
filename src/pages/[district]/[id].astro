const sourceDetail = (room.image_detail || []).filter(img => img.includes('_web'));
const sourceCollage = (room.image_collage || []).filter(img => img.includes('_web'));
let images = [...sourceDetail];
if (images.length < 6) {
    const missingCount = 6 - images.length;
    const moreImages = sourceCollage.slice(0, missingCount);
    images = [...images, ...moreImages];
}
images = images.slice(0, 6);

// ·∫¢nh Collage ƒê∆°n
const collageList = room.image_collage || [];
let collageImage = collageList.find(img => img.includes('_web'));
if (!collageImage && collageList.length > 0) collageImage = collageList[0];
