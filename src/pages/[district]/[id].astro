// 4. L·ªåC PH√íNG T∆Ø∆†NG T·ª∞
const relatedRooms = allRooms.filter(r => 
    r.district === room.district && 
    r.id !== room.id && 
    Math.abs(r.price - room.price) <= 1500000
).sort((a, b) => {
    const aHasImg = (a.image_detail && a.image_detail.length > 0) ? 1 : 0;
    const bHasImg = (b.image_detail && b.image_detail.length > 0) ? 1 : 0;
    return bHasImg - aHasImg; 
}).slice(0, 6);

// 5. X·ª¨ L√ù VIDEO
let videoId = null;
if (room.video) {
    if (room.video.includes('/shorts/')) videoId = room.video.split('/shorts/')[1].split('?')[0];
    else if (room.video.includes('v=')) videoId = room.video.split('v=')[1].split('&')[0];
    else if (room.video.includes('youtu.be/')) videoId = room.video.split('youtu.be/')[1].split('?')[0];
}

// --- [SEO M·ªöI] T·ªêI ∆ØU META DATA ---
// Title c√≥ t·ª´ kh√≥a m·∫°nh: Cho thu√™ + Lo·∫°i + ƒê·ªãa ch·ªâ + ƒê·∫∑c ƒëi·ªÉm
