---
export interface Props {
    title: string;
    description?: string;
    image?: string;
}

const { 
    title, 
    description = "Hệ thống phòng trọ tiện nghi, giờ giấc tự do tại Tân Bình & Phú Nhuận. Cam kết hình thật, giá thật.",
    image = "/logo.png"
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="website" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style is:global>
        /* --- GLOBAL STYLES --- */
:root {
    --bs-font-sans-serif: 'Be Vietnam Pro', sans-serif;
    --primary-color: #d9b205;
    --warning-color: #d9b205;
}

/* 1. Thiết lập HTML/Body chuẩn để Sticky hoạt động */
/* Tìm và đảm bảo html và body có thuộc tính này */
html, body {

    height: auto !important;        /* Không được để 100% hay 100vh */
}

body { 
    font-family: var(--bs-font-sans-serif);
    background-color: #f8f9fa; 
    color: #333;
    
    /* Layout Flexbox để Footer dính đáy */
    display: flex;
    flex-direction: column;
    min-height: 100vh;

    /* QUAN TRỌNG: KHÔNG ĐƯỢC có overflow ở đây. 
       Nếu có overflow: hidden/auto ở body, Sticky con sẽ chết ngắt. */
}

/* 2. Main chiếm phần còn lại */
main { 
    flex: 1 0 auto; /* Co giãn linh hoạt */
    width: 100%;
}

/* Navbar Brand */
.navbar-brand img { height: 48px; width: auto; box-shadow: 0 2px 5px rgba(0,0,0,0.1); }

/* Custom Scrollbar */
::-webkit-scrollbar { width: 8px; }
::-webkit-scrollbar-track { background: #f1f1f1; }
::-webkit-scrollbar-thumb { background: #ccc; border-radius: 4px; }

        /* --- DESKTOP STYLES (>= 992px) --- */
        @media (min-width: 992px) {
            .mobile-bottom-nav { display: none !important; } 
            .btn-call-mobile { display: none !important; }
            
            .nav-link { 
                font-weight: 600; 
                color: #444 !important; 
                padding: 0.5rem 1rem !important;
                transition: all 0.2s; 
            }
            .nav-link:hover, .nav-link.active { color: var(--primary-color) !important; }
        }

        /* --- MOBILE STYLES (< 992px) --- */
        @media (max-width: 991px) {
            /* Padding đáy để nội dung không bị menu che */
            body { padding-bottom: 70px; }
            
            .desktop-nav-links { display: none !important; }
            
            /* Header Mobile gọn gàng */
            .navbar-container {
                display: flex;
                justify-content: space-between;
                align-items: center;
                width: 100%;
            }

            /* Menu Đáy Mobile */
            .mobile-bottom-nav {
                position: fixed;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 65px;
                background: white;
                box-shadow: 0 -4px 20px rgba(0,0,0,0.08);
                display: flex;
                justify-content: space-around;
                align-items: center;
                z-index: 9999;
                padding-bottom: env(safe-area-inset-bottom);
                border-top: 1px solid #f0f0f0;
            }
            
            .nav-item-mobile {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                text-decoration: none;
                color: #999;
                font-size: 10px;
                font-weight: 500;
                flex: 1;
                height: 100%;
                background: transparent;
                border: none;
                padding: 0;
                transition: color 0.2s;
            }

            .nav-item-mobile i {
                font-size: 20px;
                margin-bottom: 4px;
            }

            .nav-item-mobile.active {
                color: var(--primary-color);
                font-weight: 700;
            }

            /* Nút Map nổi bật ở giữa */
            .nav-item-mobile.highlight { position: relative; top: -20px; }
            .nav-item-mobile.highlight .icon-circle {
                background: var(--warning-color);
                width: 54px; height: 54px;
                border-radius: 50%;
                display: flex; align-items: center; justify-content: center;
                box-shadow: 0 4px 10px rgba(241, 196, 15, 0.4);
                border: 4px solid #fff;
                color: #212529;
                transition: transform 0.2s;
            }
            .nav-item-mobile.highlight:active .icon-circle { transform: scale(0.95); }
        }

        /* --- FOOTER CHUYÊN NGHIỆP --- */
        footer {
            background-color: #1a1a1a; /* Màu tối sang trọng */
            color: #e0e0e0;
            font-size: 0.95rem;
        }
        footer h5, footer h6 {
            color: #fff;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        footer a {
            text-decoration: none;
            color: #adb5bd;
            transition: color 0.2s;
        }
        footer a:hover { color: var(--warning-color); }
        .footer-logo {
            width: 70px; height: 70px;
            object-fit: cover;
            border: 2px solid var(--warning-color);
            padding: 2px;
            background: white;
            border-radius: 50%;
        }
        .social-link {
            width: 36px; height: 36px;
            background: rgba(255,255,255,0.1);
            display: inline-flex;
            align-items: center; justify-content: center;
            border-radius: 50%;
            margin-right: 10px;
            transition: all 0.3s;
        }
        .social-link:hover { background: var(--warning-color); color: #000; }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-2">
        <div class="container navbar-container">
            
            <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                <img src="/logo.png" alt="Thọ Cho Thuê Trọ" class="rounded-circle border border-warning">
                <div class="d-flex flex-column">
                    <span class="fw-bold text-dark lh-1" style="font-size: 1.15rem; letter-spacing: -0.5px;">THỌ CHO THUÊ TRỌ</span>
                    <span class="text-secondary" style="font-size: 0.7rem; font-weight: 500;">UY TÍN - TẬN TÂM - CHUYÊN NGHIỆP</span>
                </div>
            </a>

            <a href="tel:0925996992" class="btn btn-sm btn-warning rounded-pill fw-bold text-dark shadow-sm btn-call-mobile px-3">
                <i class="fas fa-phone-alt me-1"></i> Gọi Ngay
            </a>

            <div class="collapse navbar-collapse desktop-nav-links" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center gap-3">
                    <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/tan-binh">Quận Tân Bình</a></li>
                    <li class="nav-item"><a class="nav-link" href="/phu-nhuan">Quận Phú Nhuận</a></li>
                    <li class="nav-item"><a class="nav-link" href="/map-search"><i class="fas fa-map-marked-alt text-danger me-1"></i>Bản đồ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/contact">Liên hệ</a></li>
                    
                    <li class="nav-item ms-2">
                        <a href="tel:0925996992" class="btn btn-warning rounded-pill fw-bold text-dark px-4 shadow-sm border-0">
                            <i class="fas fa-phone-alt me-2"></i> 0925 996 992
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main>
        <slot />
    </main>

    <footer id="footer-contact" class="pt-5 pb-4">
        <div class="container">
            <div class="row g-4">
                
                <div class="col-lg-5">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <img src="/logo.png" alt="Logo Footer" class="footer-logo">
                        <div>
                            <h5 class="mb-1 text-warning">THỌ CHO THUÊ TRỌ</h5>
                            <span class="badge bg-secondary text-white fw-normal">Hệ thống phòng trọ tiện nghi</span>
                        </div>
                    </div>
                    <p class="text-secondary small mb-4" style="line-height: 1.6;">
                        Chúng tôi cam kết mang đến không gian sống an ninh, sạch sẽ và tiện nghi tại Tân Bình & Phú Nhuận. Hình ảnh thực tế 100%, giá cả minh bạch, hỗ trợ xem phòng hoàn toàn miễn phí.
                    </p>
                    <div class="d-flex">
                        <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-tiktok"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
                        <a href="https://zalo.me/0925996992" class="social-link"><i class="fas fa-comment-dots"></i></a>
                    </div>
                </div>

                <div class="col-6 col-lg-3 ps-lg-5">
                    <h6 class="mb-4 text-white border-bottom border-secondary d-inline-block pb-1">KHU VỰC</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/tan-binh"><i class="fas fa-angle-right me-2 text-warning small"></i>Phòng trọ Tân Bình</a></li>
                        <li class="mb-2"><a href="/phu-nhuan"><i class="fas fa-angle-right me-2 text-warning small"></i>Phòng trọ Phú Nhuận</a></li>
                        <li class="mb-2"><a href="/map-search"><i class="fas fa-angle-right me-2 text-warning small"></i>Tìm trên bản đồ</a></li>
                        <li class="mb-2"><a href="/"><i class="fas fa-angle-right me-2 text-warning small"></i>Tất cả phòng</a></li>
                    </ul>
                </div>

                <div class="col-6 col-lg-4">
                    <h6 class="mb-4 text-white border-bottom border-secondary d-inline-block pb-1">LIÊN HỆ</h6>
                    <ul class="list-unstyled">
                        <li class="mb-3 d-flex">
                            <i class="fas fa-map-marker-alt text-warning mt-1 me-3"></i>
                            <span class="text-secondary">Hoạt động tại: Quận Tân Bình & Phú Nhuận, TP.HCM</span>
                        </li>
                        <li class="mb-3 d-flex">
                            <i class="fas fa-phone-alt text-warning mt-1 me-3"></i>
                            <div>
                                <a href="tel:0925996992" class="d-block text-white fw-bold">0925 996 992</a>
                                <span class="small text-secondary">(Zalo / Call / SMS)</span>
                            </div>
                        </li>
                        <li class="mb-3 d-flex">
                            <i class="fas fa-envelope text-warning mt-1 me-3"></i>
