---
export interface Props {
    title: string;
    description?: string;
    image?: string;
}

const { 
    title, 
    description = "Hệ thống phòng trọ tiện nghi, giờ giấc tự do tại Tân Bình & Phú Nhuận. Cam kết hình thật, giá thật.",
    image = "/logo.png"
} = Astro.props;

// Lấy path hiện tại để active menu
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="website" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;700&display=swap" rel="stylesheet">

    <style is:global>
        /* --- GLOBAL STYLES --- */
        body { 
            font-family: 'Be Vietnam Pro', sans-serif; 
            background-color: #f8f9fa; 
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Đảm bảo footer luôn ở đáy nếu nội dung ngắn */
        }
        main { flex: 1; } /* Main chiếm phần còn thừa để đẩy footer xuống */
        
        /* Custom Scrollbar */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #f1f1f1; }
        ::-webkit-scrollbar-thumb { background: #ccc; border-radius: 4px; }

        /* Navbar Brand */
        .navbar-brand img { height: 45px; width: auto; }

        /* --- DESKTOP SPECIFIC STYLES (Màn hình lớn >= 992px) --- */
        @media (min-width: 992px) {
            .mobile-bottom-nav { display: none !important; } /* Ẩn menu đáy trên desktop */
            
            .nav-link { font-weight: 600; color: #555 !important; transition: all 0.2s; }
            .nav-link:hover, .nav-link.active { color: #d32f2f !important; }
        }

        /* --- MOBILE SPECIFIC STYLES (Màn hình nhỏ < 992px) --- */
        @media (max-width: 991px) {
            /* Thêm padding đáy cho body để nội dung không bị menu che mất */
            body { 
                padding-bottom: 80px; 
            }

            /* Ẩn menu ngang của desktop */
            .desktop-menu-items { display: none !important; }

            /* === MOBILE BOTTOM NAV (THANH MENU DƯỚI ĐÁY) === */
            .mobile-bottom-nav {
                position: fixed;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 65px;
                background: white;
                box-shadow: 0 -2px 15px rgba(0,0,0,0.08);
                display: flex;
                justify-content: space-around;
                align-items: center;
                z-index: 1050; /* Z-index cao hơn các thành phần khác */
                padding-bottom: env(safe-area-inset-bottom); /* Cho iPhone tai thỏ */
                border-top: 1px solid #eee;
            }
            
            .nav-item-mobile {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                text-decoration: none;
                color: #888;
                font-size: 10px;
                font-weight: 500;
                flex: 1;
                height: 100%;
                background: transparent; /* Cho thẻ button */
                border: none; /* Cho thẻ button */
                padding: 0; /* Cho thẻ button */
            }

            .nav-item-mobile i {
                font-size: 20px;
                margin-bottom: 4px;
                transition: transform 0.2s, color 0.2s;
            }

            .nav-item-mobile.active, .nav-item-mobile:active {
                color: #d32f2f;
                font-weight: 700;
            }
            
            /* Nút tròn nổi bật ở giữa (Map) */
            .nav-item-mobile.highlight { position: relative; top: -15px; }
            .nav-item-mobile.highlight .icon-circle {
                background: #f1c40f;
                width: 50px; height: 50px;
                border-radius: 50%;
                display: flex; align-items: center; justify-content: center;
                box-shadow: 0 4px 10px rgba(241, 196, 15, 0.3);
                border: 4px solid #fff;
                color: #1a1a1a;
            }
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top shadow-sm">
        <div class="container justify-content-between">
            
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/logo.png" alt="Logo" class="me-2 rounded-circle border border-warning">
                <div class="d-flex flex-column">
                    <span class="fw-bold text-dark lh-1" style="font-size: 1.1rem;">Thọ Cho Thuê Trọ</span>
                    <span class="small text-muted" style="font-size: 0.75rem;">Uy tín - Tận tâm</span>
                </div>
            </a>

            <a href="tel:0925996992" class="d-lg-none btn btn-sm btn-warning rounded-pill fw-bold text-dark shadow-sm animate-pulse">
                <i class="fas fa-phone-alt me-1"></i> Gọi Ngay
            </a>

            <div class="collapse navbar-collapse flex-grow-0 desktop-menu-items" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center gap-4">
                    <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/tan-binh">Tân Bình</a></li>
                    <li class="nav-item"><a class="nav-link" href="/phu-nhuan">Phú Nhuận</a></li>
                    <li class="nav-item"><a class="nav-link" href="/map-search"><i class="fas fa-map-marked-alt text-danger"></i> Bản đồ</a></li>
                    <li class="nav-item">
                        <a href="tel:0925996992" class="btn btn-warning rounded-pill fw-bold text-dark px-4 shadow-sm">
                            <i class="fas fa-phone-alt me-2"></i> 0925 996 992
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main>
        <slot />
    </main>

    <div class="mobile-bottom-nav">
        
        <a href="/tan-binh" class={`nav-item-mobile ${currentPath.includes('tan-binh') ? 'active' : ''}`}>
            <i class="fas fa-building"></i>
            <span>Tân Bình</span>
        </a>

        <a href="/phu-nhuan" class={`nav-item-mobile ${currentPath.includes('phu-nhuan') ? 'active' : ''}`}>
            <i class="fas fa-city"></i>
            <span>Phú Nhuận</span>
        </a>

        <a href="/map-search" class="nav-item-mobile highlight">
            <div class="icon-circle">
                <i class="fas fa-map-marked-alt fs-4"></i>
            </div>
            <span class="mt-1 fw-bold text-dark">Bản Đồ</span>
        </a>

        <button id="mobile-share-btn" class="nav-item-mobile">
            <i class="fas fa-share-alt text-success"></i>
            <span>Chia sẻ</span>
        </button>

        <a href="https://zalo.me/0925996992" target="_blank" class="nav-item-mobile">
            <i class="fas fa-comment-dots text-primary"></i>
            <span>Chat Zalo</span>
        </a>

    </div>

    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row g-4 d-none d-lg-flex">
                <div class="col-md-6">
                    <h5 class="fw-bold text-warning mb-3">THỌ CHO THUÊ TRỌ</h5>
                    <p class="small text-white-50">Cam kết hình ảnh thực tế, giá cả minh bạch.</p>
                </div>
                <div class="col-md-6 text-md-end">
                     <h6 class="fw-bold text-white mb-3">LIÊN HỆ</h6>
                     <p class="small text-white-50 mb-1"><i class="fas fa-phone me-2 text-warning"></i> 0925 996 992</p>
                </div>
            </div>
            
            <div class="text-center small text-white-50 d-lg-none">
                &copy; {new Date().getFullYear()} Thọ Cho Thuê Trọ. <br>
                <span class="opacity-50">Uy tín - Tận tâm - Chuyên nghiệp</span>
            </div>
             <div class="text-center small text-white-50 d-none d-lg-block mt-3 border-top border-secondary pt-3">
                &copy; {new Date().getFullYear()} Thọ Cho Thuê Trọ. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script is:inline>
        document.addEventListener('DOMContentLoaded', () => {
            const shareBtn = document.getElementById('mobile-share-btn');
            if (shareBtn) {
                shareBtn.addEventListener('click', async () => {
                    // Dữ liệu cần chia sẻ
                    const shareData = {
                        title: document.title,
                        text: 'Xem phòng trọ xịn sò này tại Thọ Cho Thuê Trọ nè!',
                        url: window.location.href // Lấy URL hiện tại của trang
                    };

                    // Kiểm tra xem trình duyệt có hỗ trợ Native Share API không
                    if (navigator.share) {
                        try {
                            await navigator.share(shareData);
                            console.log('Chia sẻ thành công!');
                        } catch (err) {
                            console.log('Người dùng đã hủy chia sẻ hoặc có lỗi:', err);
                        }
                    } else {
                        // Fallback cho trình duyệt không hỗ trợ (ví dụ: PC hoặc browser cũ)
                        // Copy link vào clipboard
                        try {
                            await navigator.clipboard.writeText(window.location.href);
                            alert('Đã sao chép liên kết trang này vào bộ nhớ tạm! Bạn có thể dán để chia sẻ.');
                        } catch (err) {
                            alert('Trình duyệt này không hỗ trợ tính năng chia sẻ.');
                        }
                    }
                });
            }
        });
    </script>
</body>
</html>